{
    "manifest": {
      "$BASE_DIR": ".",
      "$OUTPUT_DIR": "$BASE_DIR/output_current_clamp",
      "$INPUT_DIR": "$BASE_DIR/inputs",
      "$NETWORK_DIR": "$BASE_DIR/network_current_clamp",
      "$COMPONENT_DIR": "$BASE_DIR/components"
    },
  
    "run": {
      "tstop": 2000.0,
      "dt": 0.1,
      "dL": 20.0,
      "spike_threshold": -15,
      "nsteps_block": 5000
    },
  
    "target_simulator":"NEURON",
  
    "conditions": {
      "celsius": 34.0,
      "v_init": -80
    },
  
    "inputs": {
      "current_clamp_apic": {
        "input_type": "current_clamp",
        "module": "IClamp",
        "node_set": {
            "population": "net", 
            "node_id": [0]
        },
        "amp": 0.1000,
        "delay": 500.0,
        "duration": 1000.0,
        "section_name": ["dend", "apic"],
        "section_index": [500.0, 1.0e20]
      }
    },
  
    "output":{
      "log_file": "log.txt",
      "output_dir": "$OUTPUT_DIR",
      "spikes_file": "spikes.h5",
      "spikes_file_csv": "spikes.csv",
      "spikes_sort_order": "time",
      "overwrite_output_dir": true
    },
  
    "reports": {
      "membrane_potential": {
        "cells": {"population": "net"},
        "variable_name": "v",
        "module": "membrane_report",
        "sections": "soma"
      }
    },
  
    "components": {
      "morphologies_dir": "components/morphologies",
      "synaptic_models_dir": "$COMPONENT_DIR/synaptic_models",
      "mechanisms_dir":"$COMPONENT_DIR/mechanisms",
      "biophysical_neuron_models_dir": "components/biophysical_neuron_templates",
      "point_neuron_models_dir": "$COMPONENT_DIR/point_neuron_templates"
    },
  
    "networks": {
      "nodes": [
        {
          "nodes_file": "$NETWORK_DIR/net_nodes.h5",
          "node_types_file": "$NETWORK_DIR/net_node_types.csv"
        }
      ]
    }
  }
  