{
  "manifest": {
    "$BASE_DIR": ".",
    "$OUTPUT_DIR": "$BASE_DIR/inputs",
    "$NETWORK_DIR": "$BASE_DIR/network",
    "$COMPONENTS_DIR": "$BASE_DIR/components"
  },
  "target_simulator": "LGNModel",
  "run": {
    "tstop": 3000.0,
    "dt": 0.1
  },
  "components": {
    "filter_models_dir": "$COMPONENTS_DIR/filter_models"
  },
  "output": {
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "spikes_file": "spikes.flash.h5",
    "rates_h5": "rates.flash.h5",
    "spikes_file_csv": "spikes.flash.csv"
  },
  "reports": {},
  "inputs": {
     "full_field_flash": {
       "input_type": "movie",
       "module": "full_field_flash",
       "row_size": 240,
       "col_size": 120,
       "t_on": 1000.0,
       "t_off": 2000.0,
       "max_intensity": 1.0,
       "frame_rate": 1000.0
     }
   },
  "networks": {
    "nodes": [
      {
        "nodes_file": "$NETWORK_DIR/lgn_nodes.h5",
        "node_types_file": "$NETWORK_DIR/lgn_node_types.csv"
      }
    ],
    "edges": [],
    "gap_juncs": []
  }
}
