{
  "manifest": {
    "$BASE_DIR": ".",
    "$OUTPUT_DIR": "$BASE_DIR/inputs",
    "$NETWORK_DIR": "$BASE_DIR/network",
    "$COMPONENT_DIR": "$BASE_DIR/components"
  },

  "target_simulator":"LGNModel",

  "networks": {
    "nodes": [
      {
        "nodes_file": "$NETWORK_DIR/lgn_nodes.h5",
        "node_types_file": "$NETWORK_DIR/lgn_node_types.csv"
      }
    ]
  },

  "components": {
    "filter_models_dir": "$COMPONENT_DIR/filter_models"
  },

  "run": {
    "tstop": 3000.0,
    "dt": 0.1
  },

  "conditions": {
    "jitter_lower": 0.75,
    "jitter_upper": 1.25
  },

  "inputs": {
    "full_field_flash": {
      "input_type": "movie",
      "module": "movie",
      "data_file": "./movies/ns_movie.8images.npy",
      "frame_rate": 1000.0
    }
  },

  "output":{
    "log_file": "log.txt",
    "output_dir": "$OUTPUT_DIR",
    "rates_h5": "rates.ns_movie.h5",
    "spikes_file_csv": "spikes.ns_movie.csv",
    "spikes_file": "spikes.ns_movie.h5"
  }
}
