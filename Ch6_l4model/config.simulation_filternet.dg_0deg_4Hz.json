{
  "manifest": {
    "$BASE_DIR": ".",
    "$INPUT_DIR": "$BASE_DIR/inputs",
    "$NETWORK_DIR": "$BASE_DIR/network",
    "$COMPONENTS_DIR": "$BASE_DIR/components"
  },

  "target_simulator":"LGNModel",

  "run": {
    "tstop": 3000.0,
    "dt": 0.1
  },

  "conditions": {
    "jitter_lower": 0.75,
    "jitter_upper": 1.25
  },

  "inputs": {
    "gratings": {
      "input_type": "movie",
      "module": "graiting",
      "row_size": 120,
      "col_size": 240,
      "gray_screen_dur": 500.0,
      "cpd": 0.04,
      "temporal_f": 4.0,
      "contrast": 0.8,
      "theta": 0.0,
      "evaluation_options": {
        "downsample": 1,
        "separable": true
      }
    }
  },

  "output":{
    "log_file": "log.txt",
    "output_dir": "./inputs",
    "rates_h5": "rates.gratings.0deg_4Hz.h5",
    "spikes_file": "spikes.gratings.0deg_4Hz.h5",
    "spikes_file_csv": "spikes.gratings.0deg_4Hz.csv"
  },

  "components": {
    "filter_models_dir": "$COMPONENTS_DIR/filter_models"
  },

  "networks": {
    "nodes": [
      {
        "nodes_file": "$NETWORK_DIR/lgn_nodes.h5",
        "node_types_file": "$NETWORK_DIR/lgn_node_types.csv"
      }
    ]
  }
}
